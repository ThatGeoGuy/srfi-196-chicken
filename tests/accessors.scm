;;;; Accessors

(test-group "Range accessors"
  (test "The first element of (numeric-range 10 30) is 10."
        10
        (range-ref test-num-range 0))

  (test "The last element of a boolean range is #f"
        #f
        (range-ref (range 2 zero?) 1))
  )
